bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
# --]]

# ---[[ MODES
# Window resize mode
set $resize_mode RESIZE MODE: (hjkl, arrows) Resize (esc, return, super+r) Exit
mode "$resize_mode" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym $mod+r mode "default"
}
bindsym $mod+r mode "$resize_mode"
# System option mode
set $system_mode SYS MODE: (c) Config reload (e) Exit i3 (l) Lock (r) Restart i3 (s) Suspend (shift+r) Reboot (shift+s) Shutdown (esc) Exit
mode "$system_mode" {
  bindsym c reload
  bindsym r restart
  bindsym l exec --no-startup-id $lock, mode "default"
  bindsym e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Sure' 'i3-msg exit'"
  bindsym s exec --no-startup-id $suspend, mode "default"
  bindsym Shift+r exec "i3-nagbar -t warning -m 'Reboot?' -B 'Sure' '$reboot'"
  bindsym Shift+s exec "i3-nagbar -t warning -m 'Shutdown?' -B 'Sure' '$shutdown'"
  bindsym Escape mode "default"
}
bindsym $mod+Shift+c mode "$system_mode"
bindsym $mod+Shift+r mode "$system_mode"
bindsym $mod+Shift+e mode "$system_mode"
# Passthrough mode
set $passthrough_mode PASSTHROUGH MODE: (esc) Exit
mode "$passthrough_mode" {
  bindsym Escape mode "default"
}
bindsym $mod+Shift+p mode "$passthrough_mode"
# --]]

# ---[[ APPEARANCE
font pango:FantasqueSansMono Nerd Font 8
