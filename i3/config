# ---[[ VARIABLES
set $mod Mod4
# This is used to set the natural scrolling and tab to click
set $trackpad_id 'SynPS/2 Synaptics TouchPad'
# Script var
set $lock $HOME/dotfiles/i3/i3_system_mode.sh lock
set $suspend $HOME/dotfiles/i3/i3_system_mode.sh suspend
set $reboot $HOME/dotfiles/i3/i3_system_mode.sh reboot
set $shutdown $HOME/dotfiles/i3/i3_system_mode.sh shutdown
# Program var
set $bar $HOME/.config/polybar/polybar_launch.sh twobar
set $clipboard clipit
#set $clipboard_show copyq show
for_window [class=$clipboard] floating enable, sticky enable, resize set 30 ppt 60 ppt, move position 1300px 50px
set $compositor picom
set $menu kitty --class=launcher -e ~/dotfiles/i3/sway-launcher-desktop.sh
for_window [class="^launcher$"] floating enable, sticky enable, resize set 30 ppt 60 ppt, border pixel 10
set $network nm-applet --indicator
set $nightlight redshift -l 39.2:-86.5 -t 5600:3500 -m randr
set $notification dunst
set $screenshot flameshot launcher
set $term kitty
set $wallpaper feh --no-fehbg --bg-fill '/home/theopn/dotfiles/pictures/2008-09-28_SingaporeGP_LH-Nord.jpg'
# Key var
set $left h
set $down j
set $up k
set $right l
# workspace var
set $ws1 "1:  "
set $ws2 "2:  "
set $ws3 "3:  "
set $ws4 "4:  "
set $ws5 "5:  "
set $ws6 "6:  "
set $ws7 "7"
set $ws8 "8:  "
set $ws9 "9:  "
set $ws10 "10:  "
# --]]

# ---[[ HARDWARE ET SYSTEM
# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle
# Use brightnessctl to adjust brightness with function row keys
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +10%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 10%-
# Using xss-lock to automatically lock computer before going to sleep
exec --no-startup-id xss-lock --transfer-sleep-lock -- $lock --nofork
# Swap Caps Lock and Control. No more Emacs pinky
exec --no-startup-id setxkbmap -option ctrl:swapcaps
# Enable tap to click and natural scrolling
exec --no-startup-id xinput --set-prop $trackpad_id "libinput Tapping Enabled" 1
exec --no-startup-id xinput --set-prop $trackpad_id "libinput Natural Scrolling Enabled" 1
# Accessing clipboard manager and screenshot tool
#bindsym $mod+Shift+v exec --no-startup-id $clipboard_show
bindsym $mod+Shift+s exec --no-startup-id $screenshot
# --]]

# ---[[ WINDOW KEYBINDINGS
bindsym $mod+Return exec $term
bindsym $mod+Shift+q kill
bindsym $mod+d exec --no-startup-id $menu
bindsym $mod+space exec --no-startup-id $menu
# change focus
bindsym $mod+$left focus left
